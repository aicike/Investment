@{
    ViewBag.Title = "集团账户";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
}
@model List<Entity.GroupAccount>
<div class="row-fluid">
    <div class="span12" style="width: 100%">
        <a href="@Url.Action("Add", "GroupAccount")" class="btn blue" style=" width:100px">添加账号</a><br />
        <br />
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>集团账户列表
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-hover">
                    <tr>
                        <th>
                            头像
                        </th>
                        <th>
                            登陆账号
                        </th>
                        <th>
                            姓名
                        </th>
                        <th>
                            角色
                        </th>
                        <th style="width: 20%">
                            操作
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (string.IsNullOrEmpty(item.HeadPortrait))
                                {
                                    <img src="@Url.Content("/Image/default_Avatar.png")" style="height:30px" />
                                }
                                else
                                { 
                                    <img src="@Url.Content(item.HeadPortrait)"  style="height:30px"  />
                                }
                            </td>
                            <td>
                                @item.AccountNumber
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @foreach (var Role in item.RoleAccounts.ToList())
                                {
                                    @(Role.Role.RoleName)@:、
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "GroupAccount", new { GAID = item.ID })">修改</a> @*@Ajax.ActionLink("删除", "Delete", "GroupAccount", new { GAID = item.ID }, new AjaxOptions() { UpdateTargetId = "alert", OnBegin = "return AppDelete('你确定要删除吗?','" + Url.Action("Delete", "GroupAccount", new { GAID = item.ID }) + "',null)" })*@
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
