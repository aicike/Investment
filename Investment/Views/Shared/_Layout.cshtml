<!DOCTYPE html>
@{
    var account = Session["SessionLoginUser"] as Entity.SessionLoginUser;
}
<!--[if IE 8]> <html class="ie8"> <![endif]-->
<!--[if IE 9]> <html class="ie9"> <![endif]-->
<!--[if !IE]><!-->
<html>
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>陕西兆恒投资 - @ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <script src="@Url.Content("/media/js/jquery-1.10.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Scripts/common.js")" type="text/javascript"></script>
    <link href="@Url.Content("/media/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/media/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/media/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/media/css/style-metro.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/media/css/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/media/css/style-responsive.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/media/css/light.css")" rel="stylesheet" type="text/css" id="style_color" />
    <link href="@Url.Content("/media/css/uniform.default.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="@Url.Content("/media/image/favicon.ico")" />
    
</head>
<body class="page-header-fixed">
    <script>
        open_modal_div();
    </script>
    <div class="header navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="brand" href="#">
                    <img src="@Url.Content("/Image/logo.png")" alt="logo" style="height:28px"/>
                </a><a href="javascript:;" class="btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
                    <img src="@Url.Content("/media/image/menu-toggler.png")" alt="" />
                </a>
                <ul class="nav pull-right">
                    <li class="dropdown user"><a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        @if (string.IsNullOrEmpty(account.HeadImg))
                        {
                            <img alt="" src="@Url.Content("/Image/default_Avatar.png")" style=" width:28px" />
                        }
                        else
                        { 
                            <img alt="" src="@Url.Content(account.HeadImg)" style=" width:28px" />
                        }
                        @if (account != null)
                        {
                            <span class="username">@account.CompanyName &nbsp;&nbsp;&nbsp;@account.UserName</span>
                        }<i class="icon-angle-down"></i></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", "Exit")"><i class="icon-key"></i>注销/退出登录</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div id="jmessage" style="z-index: 9999; display: none;">
    </div>
    <div class="page-container">
        <div class="page-sidebar nav-collapse collapse">
            @Html.Partial("Menu")
        </div>
        <div class="page-content">
            <div class="container-fluid">
                <div class="row-fluid" id="_Title">
                    <div class="span12">
                        <ul class="breadcrumb">
                            <li><i class="icon-home"></i><a href="@Url.Action("index", "Home")">首页</a> <i class="icon-angle-right">
                            </i></li>
                            <li>@ViewBag.Title</li>
                        </ul>
                    </div>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="footer-inner">
            Copyright &copy; 2014-2015 Imtimely All Rights Reserved 陕ICP备14033857
        </div>
        <div class="footer-tools">
            <span class="go-top"><i class="icon-angle-up"></i></span>
        </div>
    </div>
    <script src="@Url.Content("/media/js/jquery-migrate-1.2.1.min.js")" type="text/javascript"></script>
    <!-- IMPORTANT! Load jquery-ui-1.10.1.custom.min.js before bootstrap.min.js to fix bootstrap tooltip conflict with jquery ui tooltip -->
    <script src="@Url.Content("/media/js/jquery-ui-1.10.1.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/media/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Scripts/jquery.validate-vsdoc.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/topbar/juery.topbar.js")"></script>
    <!--[if lt IE 9]>

    <script src="@Url.Content("/media/js/excanvas.min.js")"></script>

    <script src="@Url.Content("/media/js/respond.min.js")"></script>  
    
    <![endif]-->
    <script src="@Url.Content("/media/js/jquery.slimscroll.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/media/js/jquery.blockui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/media/js/jquery.cookie.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/media/js/jquery.uniform.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("/media/js/app.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function(){
            App.init(); // initlayout and core plugins
            //Index.init();
            //UIGeneral.init();
        }); 
    </script>
    @RenderSection("scripts", required: false)
    @Html.RenderStyles()
    @Html.RenderJavaScripts()
    <div id="alert">
    </div>
</body>
</html>
