@{
    ViewBag.Title = "我的已办列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
}
@model PagedList<Entity.WorkFlow>
<div class="row-fluid">
    <div class="span12">
        <div class="portlet box blue" style="margin-top: 10px;">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>我的已办列表
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-bordered table-hover" id="table_company">
                    <thead>
                        <tr>
                            <th style="width: 100px;">
                                编号
                            </th>
                            <th style="width: 200px;">
                                项目名称
                            </th>
                            <th style="width: 80px;">
                                状态
                            </th>
                            <th style="width: 100px;">
                                当前节点
                            </th>
                            <th style="width: 100px;">
                                当前审批人
                            </th>
                            <th style="width: 80px">
                                操作
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Number
                                </td>
                                <td>
                                    @item.Financing.Name
                                </td>
                                <td>
                                    @switch (item.State)
                                    {
                                        case 0:
                                        @:草稿
                                                break;
                                        case 1:
                                        @:进行中
                                                break;
                                        case 2:
                                        @:已完成
                                                break;
                                        case 3:
                                        @:未通过
                                               break;
                                    }
                                </td>
                                <td>
                                    @item.WorkFlow_Node.WorkFlowNodeManager.Name
                                </td>
                                <td>
                                    item.ApprovalRecord.Where(a=>a.Operation==-1).ToList().ConvertToString(",");
                                </td>
                                <td>
                                    @Html.ActionLink("详细", "Detail", "Company", new { id = item.ID }, null, true)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="pagination">
                    @Html.Pager(Model, new PagerOptions
               {
                   PageIndexParameterName = "ID",
                   CurrentPagerItemWrapperFormatString = "<li class=\"disabled\"><a>{0}</a></li>",
                   NumericPagerItemWrapperFormatString = "<li>{0}</li>",
                   NavigationPagerItemWrapperFormatString = "<li>{0}</li>",
                   CssClass = "",
                   SeparatorHtml = "",
                   AutoHide = false,
                   PageIndexOutOfRangeErrorMessage = "页面错误。",
                   ShowFirstLast = false,
                   ContainerTagName = "ul"
               })
                </div>
            </div>
        </div>
    </div>
</div>
