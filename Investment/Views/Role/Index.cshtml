@{
    ViewBag.Title = "角色管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
}
@model List<Entity.Role>
<div class="row-fluid">
    <div class="span12">
        @Html.ActionLink("新增角色", "Add", "Role", null, new { @class = "btn blue" }, true)
        <div class="portlet box blue" style="margin-top: 10px;">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>角色列表
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-hover">
                    <tr>
                        <th>
                            角色名称
                        </th>
                        <th style="width: 20%">
                            操作
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.RoleName
                            </td>
                            <td>
                                @Html.ActionLink("分配权限", "RoleMenu", "Role", new { id = item.ID }, null, true)
                                @Html.ActionLink("修改", "Edit", "Role", new { id = item.ID }, null, true)
                                @Ajax.ActionLink("删除", "Delete", "Role", new { id = item.ID }, new AjaxOptions() { UpdateTargetId = "alert", OnBegin = "return AppDelete('确定删除?删除此项将会删除其关联的所有数据！','" + Url.Action("Delete", "Role", new {  id = item.ID }) + "',null)" }, true)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
