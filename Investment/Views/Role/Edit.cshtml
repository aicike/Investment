@{
    ViewBag.Title = "修改角色";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
}
@model Entity.Role
<div class="row-fluid">
    <div class="span12">
        @using (Ajax.BeginForm("Edit", "Role", new AjaxOptions() { UpdateTargetId = "alert" }))
        {
            <div class="myoption">
                <button class="btn blue" type="submit">
                    保存</button>
                <a href="@Url.Action("Index", "Role")" class="btn blue" style="">返回</a></div>
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-cogs"></i>修改角色
                    </div>
                    <div class="tools">
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-hover">
                        <tr>
                            <td style="width: 120px">
                                角色名称：
                            </td>
                            <td>@Html.TextBoxFor(a => a.RoleName)@Html.HiddenFor(a => a.ID)
                            </td>
                            <td>@Html.ValidationMessageFor(a => a.RoleName)
                            </td>
                        </tr>
                    </table>
                </div>
            </div>  }
    </div>
</div>
