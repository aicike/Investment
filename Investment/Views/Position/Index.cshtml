@{
    ViewBag.Title = "职位管理";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section scripts{
}
@model List<Entity.Position>
<div class="row-fluid">
    <div class="span12" style="width: 100%">
        <br />
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>职位列表
                </div>
                <div class="tools">
                    @Html.ActionLink("<i class='icon-plus'></i>&nbsp;新增职位", "Add", "Position", null, new { style = "color:#FFF" }, true).Html()
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>
                            职位名称
                        </th>
                        <th style="width: 20%">
                            操作
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @Html.ActionLink("修改", "Edit", "Position", new { ID = item.ID }, null, true)
                                @Ajax.ActionLink("删除", "Delete", "Position", new { ID = item.ID }, new AjaxOptions() { UpdateTargetId = "alert", OnBegin = "return AppDelete('你确定要删除吗?','" + Url.Action("Delete", "Position", new { ID = item.ID }) + "',null)" }, true)
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
