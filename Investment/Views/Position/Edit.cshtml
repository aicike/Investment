@{
    ViewBag.Title = "修改职位";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
}
@model Entity.Position
<div class="row-fluid">
    <div class="span12" style="width: 100%">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>修改职位
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                @using (Ajax.BeginForm("Edit", "Position", new AjaxOptions() { UpdateTargetId = "alert" }, new { @class = "form-horizontal" }))
                {
                    <button class="btn blue"  type="submit">
                        保存</button>
                    <a href="@Url.Action("Index", "Position")" class="btn blue" style="">返回</a><br />
                    <br />
                    <input type="hidden" name="Roles" id="Roles" />
                      <div class="control-group">
                        <label class="control-label">
                            职位名称:</label>
                        <div class="controls">
                           @Html.TextBoxFor(a => a.Name, new { @class = "span6 m-wrap" }) @Html.HiddenFor(a => a.ID)
                            <span class="help-inline">@Html.ValidationMessageFor(a => a.Name)</span>
                        </div>
                    </div>
                  

                   
                }
            </div>
        </div>
    </div>
</div>

