@{
    ViewBag.Title = "新增职位";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
}
@model Entity.Position
<div class="row-fluid">
    <div class="span12" style="width: 100%">
        <div class="myoption">
            <button class="btn blue" onclick="GetRole()" type="submit">
                添加</button>
            <a href="@Url.Action("Index", "Position")" class="btn blue" style="">返回</a></div>
        @using (Ajax.BeginForm("Add", "Position", new AjaxOptions() { UpdateTargetId = "alert" }, new { @class = "form-horizontal" }))
        {
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-cogs"></i>新增职位
                    </div>
                    <div class="tools">
                    </div>
                </div>
                <div class="portlet-body">
                    <input type="hidden" name="Roles" id="Roles" />
                    <div class="control-group">
                        <label class="control-label">
                            职位名称:</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.Name, new { @class = "span6 m-wrap" })
                            <span class="help-inline">@Html.ValidationMessageFor(a => a.Name)</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
