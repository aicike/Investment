@{
    ViewBag.Title = ViewBag.MName+"-机构产品管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
}
@model List<Entity.MechanismProducts>

<div class="row-fluid">
    <div class="span12" style="width: 100%">
        <a href="@Url.Action("Add", "MechanismProducts", new { MID = ViewBag.MID })" class="btn blue" style=" width:100px">添加产品</a>
          <a href="@Url.Action("Index", "Mechanism")" class="btn blue" style=" width:100px">返回</a><br />
        <br />
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>@(ViewBag.MName)-机构产品列表
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>
                            产品名称
                        </th>
                        <th>
                            最高贷款额度（万）
                        </th>
                        <th>
                            备注
                        </th>
                        <th>
                            状态
                        </th>
                        <th style="width: 80px">
                            操作
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.MaxQuota
                            </td>
                            <td>
                                @item.Remark
                            </td>
                            <td>
                                @if (item.IsEnable)
                                {
                                     @:正常
                                }
                                else
                                { 
                                <span style=" color:Red">禁用</span>
                                   
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "MechanismProducts", new { MID = ViewBag.MID, MPID = item.ID })">修改</a> 
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

