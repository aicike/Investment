@{
    ViewBag.Title = "机构管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
}
@model List<Entity.Mechanism>

<div class="row-fluid">
    <div class="span12" style="width: 100%">
        <a href="@Url.Action("Add", "Mechanism")" class="btn blue" style=" width:100px">添加机构</a><br />
        <br />
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>机构列表
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-hover">
                    <tr>
                        <th>
                            机构名称
                        </th>
                        <th>
                            备注
                        </th>
                        <th style="width: 20%">
                            操作
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Remark
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Mechanism", new { ID = item.ID })">修改</a> @*@Ajax.ActionLink("删除", "Delete", "GroupAccount", new { GAID = item.ID }, new AjaxOptions() { UpdateTargetId = "alert", OnBegin = "return AppDelete('你确定要删除吗?','" + Url.Action("Delete", "GroupAccount", new { GAID = item.ID }) + "',null)" })*@
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
