@{
    ViewBag.Title = "机构管理-添加机构";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
}
@model Entity.Mechanism
<div class="row-fluid">
    <div class="span12" style="width: 100%">
        @using (Ajax.BeginForm("Add", "Mechanism", new AjaxOptions() { UpdateTargetId = "alert" }, new { @class = "form-horizontal" }))
        {
            <div class="myoption">
                <button class="btn blue" type="submit">
                    添加</button>
                <a href="@Url.Action("Index", "Mechanism")" class="btn blue" style="">返回</a></div>
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-cogs"></i>机构管理-添加机构
                    </div>
                    <div class="tools">
                    </div>
                </div>
                <div class="portlet-body form">
                    <input type="hidden" name="Roles" id="Roles" />
                    <div class="control-group">
                        <label class="control-label">
                            机构名称:</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.Name, new { @class = "span6 m-wrap" })
                            <span class="help-inline">@Html.ValidationMessageFor(a => a.Name)</span>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">
                            官方网站地址:</label>
                        <div class="controls">
                            @Html.TextBoxFor(a => a.WebSite, new { @class = "span6 m-wrap" })
                            <span class="help-inline">@Html.ValidationMessageFor(a => a.WebSite)</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
