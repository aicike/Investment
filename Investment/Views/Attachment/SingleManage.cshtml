@{
    ViewBag.Title = "Manage";
    Layout = null;
    var ac = ViewBag.AC as Investment.Models.AttachmentControl;
}
@model Entity.Attachment
@{Html.AddJavaScript(Url.Content("/Attachment/GetJS_Single?formID=" + ac.ID + "&enumAttachmentType=" + (int)ac.EnumAttachmentType) + "&table=" + ac.Table + "&tableID=" + ac.TableId);}
<a style="margin-right:10px;cursor:pointer;" id="link_single_@ac.ID">@ac.Text</a><span id="span_single_@ac.ID">
    @if (Model != null)
    { 
        <a href="javascript:;" class="inline popovers" data-placement="bottom" data-html="true" data-content="<img style='max-width:400px;max-height:400px' src='@Model.FileUrl'></img>" data-original-title="">@Model.FileName</a><a style="cursor: pointer;margin-left:20px;" class="inline link_delete_attachment_single_old_@ac.ID" tid='@Model.TableID' link_id='@Model.ID'>
            删除</a>    
    }
</span>
<input id="hid_attachment_single_@ac.ID" name="hid_attachment_single_@ac.ID" type="hidden" />