@{
    ViewBag.Title = "修改客户";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="@Url.Content("/Scripts/plupload-2.0.0/js/plupload.full.min.js")"></script>
@section scripts{
    <script>
        $(function () {
            $("#link_1").click();
        });
    </script>
}
@model Entity.Company
<div class="row-fluid">
    <div class="span12">
        <div class="tabbable tabbable-custom boxless">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab_1" id="link_1" data-toggle="tab">基本信息</a></li>
                <li><a class="" href="#tab_2" data-toggle="tab">附件信息</a></li>
                <li><a class="" href="#tab_3" data-toggle="tab">融资信息</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_1">
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-reorder"></i>基本信息</div>
                            <div class="tools">
                            </div>
                        </div>
                        <div class="portlet-body form">
                            @using (Ajax.BeginForm("Edit", "Company", new AjaxOptions() { UpdateTargetId = "alert" }, new { @class = "form-horizontal" }))
                            {
                                <div class="control-group">
                                    <label class="control-label">
                                        公司名称</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(a => a.Name, new { @class = "span6 m-wrap" })
                                        <span class="help-inline">@Html.ValidationMessageFor(a => a.Name)</span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">
                                        详细地址</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(a => a.Address, new { @class = "m-wrap span6" })
                                        <span class="help-inline">@Html.ValidationMessageFor(a => a.Address)</span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">
                                        法定代表人</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(a => a.FaDingDaiBiaoRen, new { @class = "span6 m-wrap" })
                                        <span class="help-inline">@Html.ValidationMessageFor(a => a.FaDingDaiBiaoRen)</span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">
                                        实际控制人</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(a => a.ShiJiKongZhiRen, new { @class = "span6 m-wrap" })
                                        <span class="help-inline">@Html.ValidationMessageFor(a => a.ShiJiKongZhiRen)</span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">
                                        成立时间</label>
                                    <div class="controls">
                                        @Html.TextBox("SetUpTime", @Model.SetUpTime.ToString("yyyy/MM/dd"), new { @class = "m-wrap span6", placeholder = "年/月/日 （如：2014/05/01）" })
                                        <span class="help-inline">@Html.ValidationMessageFor(a => a.SetUpTime)</span>
                                    </div>
                                </div> 
                                <div class="control-group">
                                    <label class="control-label">
                                        企业性质</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(a => a.QiYeXingZhi, new { @class = "m-wrap span6" })
                                        <span class="help-inline">@Html.ValidationMessageFor(a => a.QiYeXingZhi)</span>
                                    </div>
                                </div>                               
                                <div class="row-fluid">
                                    <div class="span3">
                                        <div class="control-group">
                                            <label class="control-label">
                                                注册资本（万元）</label>
                                            <div class="controls">
                                                @Html.TextBoxFor(a => a.ZhuCheZiJin, new { @class = "m-wrap span12" })
                                                <span class="help-block">@Html.ValidationMessageFor(a => a.ZhuCheZiJin)</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span3">
                                        <div class="control-group">
                                            <label class="control-label">
                                                实收资本（万元）</label>
                                            <div class="controls">
                                                @Html.TextBoxFor(a => a.ShiShouZiBen, new { @class = "m-wrap span12" })
                                                <span class="help-block">@Html.ValidationMessageFor(a => a.ShiShouZiBen)</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span3">
                                        <div class="control-group">
                                            <label class="control-label">
                                                资产总额（万元）</label>
                                            <div class="controls">
                                                @Html.TextBoxFor(a => a.ZiChanZongE, new { @class = "m-wrap span12" })
                                                <span class="help-block">@Html.ValidationMessageFor(a => a.ZiChanZongE)</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span3">
                                        <div class="control-group">
                                            <label class="control-label">
                                                负债总额（万元）</label>
                                            <div class="controls">
                                                @Html.TextBoxFor(a => a.FuZhaiZongE, new { @class = "m-wrap span12" })
                                                <span class="help-block">@Html.ValidationMessageFor(a => a.FuZhaiZongE)</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>        
                                <div class="row-fluid">
                                    <div class="span3">
                                        <div class="control-group">
                                            <label class="control-label">
                                                主营业务收入（万元）</label>
                                            <div class="controls">
                                                @Html.TextBoxFor(a => a.ZhuYingYeWuShouRu, new { @class = "m-wrap span12" })
                                                <span class="help-block">@Html.ValidationMessageFor(a => a.ZhuYingYeWuShouRu)</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span3">
                                        <div class="control-group">
                                            <label class="control-label">
                                                净利润（万元）</label>
                                            <div class="controls">
                                                @Html.TextBoxFor(a => a.JingLiRun, new { @class = "m-wrap span12" })
                                                <span class="help-block">@Html.ValidationMessageFor(a => a.JingLiRun)</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span3">
                                        <div class="control-group">
                                            <label class="control-label">
                                                或有负债（万元）</label>
                                            <div class="controls">
                                                @Html.TextBoxFor(a => a.HuoYouFuZhai, new { @class = "m-wrap span12" })
                                                <span class="help-block">@Html.ValidationMessageFor(a => a.HuoYouFuZhai)</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">
                                        股权结构</label>
                                    <div class="controls">
                                        @Html.TextAreaFor(a => a.GuQuanJieGou, new { @class = "span6 m-wrap" })
                                        <span class="help-inline">@Html.ValidationMessageFor(a => a.GuQuanJieGou)</span>
                                    </div>
                                </div>                                
                                <div class="control-group">
                                    <label class="control-label">
                                        信用记录</label>
                                    <div class="controls">
                                        @Html.TextAreaFor(a => a.ShiJiKongZhiRenXinYongJiLu, new { @class = "span6 m-wrap" })
                                        <span class="help-inline">@Html.ValidationMessageFor(a => a.ShiJiKongZhiRenXinYongJiLu)</span>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">
                                        贷款卡</label>
                                    <div class="controls">
                                        @Html.TextBoxFor(a => a.DaiKuanKa, new { @class = "span6 m-wrap" })
                                        <span class="help-inline">@Html.ValidationMessageFor(a => a.DaiKuanKa)</span>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <label class="control-label">
                                        关联企业</label>
                                    <div class="controls">
                                        <span class="help-inline"></span>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <button type="submit" class="btn blue">
                                        保存</button>
                                    <button type="button" class="btn">
                                        返回</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="tab-pane " id="tab_2">
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-reorder"></i>附件信息</div>
                            <div class="tools">
                            </div>
                        </div>
                        <div class="portlet-body form">
                            @using (Ajax.BeginForm("EditAttachment", "Company", new AjaxOptions() { UpdateTargetId = "alert" }, new { @class = "form-horizontal" }))
                            {
                                <div class="control-group">
                                    <label class="control-label">
                                        法人身份证</label>
                                    <div class="controls">
                                        <div>
                                            <span class="help-inline">
                                                @{Html.RenderAction("SingleManage", "Attachment", new Investment.Models.AttachmentControl { ID = "1", Text = "[正面上传]", Table = Entity.SystemConst.TableName.Company, TableId = Model.ID, EnumAttachmentType = Entity.Enum.EnumAttachmentType.FaRen1 });}
                                            </span>
                                        </div>
                                        <div>
                                            <span class="help-inline">
                                                @{Html.RenderAction("SingleManage", "Attachment", new Investment.Models.AttachmentControl { ID = "2", Text = "[反面上传]", Table = Entity.SystemConst.TableName.Company, TableId = Model.ID, EnumAttachmentType = Entity.Enum.EnumAttachmentType.FaRen2 });}
                                            </span>
                                        </div>
                                        <div id="filelist">
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">
                                        营业执照</label>
                                    <div class="controls">
                                        <div id="container">
                                            <span class="help-inline">
                                                @{Html.RenderAction("SingleManage", "Attachment", new Investment.Models.AttachmentControl { ID = "3", Text = "[正本上传]", Table = Entity.SystemConst.TableName.Company, TableId = Model.ID, EnumAttachmentType = Entity.Enum.EnumAttachmentType.YingYeZhiZhao1 });}
                                            </span>
                                        </div>
                                        <div>
                                            <span class="help-inline">
                                                @{Html.RenderAction("SingleManage", "Attachment", new Investment.Models.AttachmentControl { ID = "4", Text = "[副本上传]", Table = Entity.SystemConst.TableName.Company, TableId = Model.ID, EnumAttachmentType = Entity.Enum.EnumAttachmentType.YingYeZhiZhao2 });}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">
                                        组织机构代码证</label>
                                    <div class="controls">
                                        <div>
                                            <span class="help-inline">
                                                @{Html.RenderAction("SingleManage", "Attachment", new Investment.Models.AttachmentControl { ID = "5", Text = "[正本上传]", Table = Entity.SystemConst.TableName.Company, TableId = Model.ID, EnumAttachmentType = Entity.Enum.EnumAttachmentType.ZuZhiJiGouDaiMa1 });}
                                            </span>
                                        </div>
                                        <div>
                                            <span class="help-inline">
                                                @{Html.RenderAction("SingleManage", "Attachment", new Investment.Models.AttachmentControl { ID = "6", Text = "[副本上传]", Table = Entity.SystemConst.TableName.Company, TableId = Model.ID, EnumAttachmentType = Entity.Enum.EnumAttachmentType.ZuZhiJiGouDaiMa2 });}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">
                                        税务 ( 国税、地税 )</label>
                                    <div class="controls">
                                        <div>
                                            <span class="help-inline">
                                                @{Html.RenderAction("SingleManage", "Attachment", new Investment.Models.AttachmentControl { ID = "7", Text = "[正本上传]", Table = Entity.SystemConst.TableName.Company, TableId = Model.ID, EnumAttachmentType = Entity.Enum.EnumAttachmentType.ShuiWu1 });}
                                            </span>
                                        </div>
                                        <div>
                                            <span class="help-inline">
                                                @{Html.RenderAction("SingleManage", "Attachment", new Investment.Models.AttachmentControl { ID = "8", Text = "[副本上传]", Table = Entity.SystemConst.TableName.Company, TableId = Model.ID, EnumAttachmentType = Entity.Enum.EnumAttachmentType.ShuiWu2 });}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">
                                        贷款卡</label>
                                    <div class="controls">
                                        <div>
                                            <span class="help-inline">
                                                @{Html.RenderAction("SingleManage", "Attachment", new Investment.Models.AttachmentControl { ID = "9", Text = "[上传]", Table = Entity.SystemConst.TableName.Company, TableId = Model.ID, EnumAttachmentType = Entity.Enum.EnumAttachmentType.DaiKuanKa });}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">
                                        验资报告、历次变更时的验资报告</label>
                                    <div class="controls">
                                        @{Html.RenderAction("Manage", "Attachment", new Investment.Models.AttachmentControl { ID = "1", Text = "附件管理", Table = Entity.SystemConst.TableName.Company, TableId = Model.ID, EnumAttachmentType = Entity.Enum.EnumAttachmentType.YanZiBaoGao });}
                                    </div>
                                </div>
                                <div class="control-group">
                                    <label class="control-label">
                                        其他附件</label>
                                    <div class="controls">
                                        @{Html.RenderAction("Manage", "Attachment", new Investment.Models.AttachmentControl { ID = "2", Text = "附件管理", Table = Entity.SystemConst.TableName.Company, TableId = Model.ID, EnumAttachmentType = Entity.Enum.EnumAttachmentType.Unknown });}
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <button type="submit" class="btn blue">
                                        保存</button>
                                    <button type="button" class="btn">
                                        返回</button>@Html.HiddenFor(a => a.ID)
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="tab-pane " id="tab_3">
                    <div class="portlet box blue">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="icon-reorder"></i>融资信息</div>
                            <div class="tools">
                            </div>
                        </div>
                        <div class="portlet-body form">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
