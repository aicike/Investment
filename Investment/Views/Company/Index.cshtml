@{
    ViewBag.Title = "客户管理";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
}
@model PagedList<Entity.Company>
<div class="row-fluid">
    <div class="span12">
        @Html.ActionLink("新增客户", "Add", "Company", null, new { @class = "btn blue" }, true)
        <div class="portlet box blue" style="margin-top: 10px;">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>客户列表
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-hover">
                    <tr>
                        <th>
                            客户名称
                        </th>
                        <th style="width: 20%">
                            操作
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item
                            </td>
                            <td>
                                @Html.ActionLink("分配权限", "RoleMenu", "Role", new { id = item.ID }, null, true)
                                @Html.ActionLink("修改", "Edit", "Role", new { id = item.ID }, null, true)
                                @Ajax.ActionLink("删除", "Delete", "Role", new { id = item.ID }, new AjaxOptions() { UpdateTargetId = "alert", OnBegin = "return AppDelete('确定删除?删除此项将会删除其关联的所有数据！','" + Url.Action("Delete", "Role", new {  id = item.ID }) + "',null)" }, true)
                            </td>
                        </tr>
                    }
                </table>
                 <div class="pages">
        @Html.Pager(Model, new PagerOptions
   {
       PageIndexParameterName = "ID",
       CurrentPagerItemWrapperFormatString = "<li class=\"disabled\">{0}</li>",
       NumericPagerItemWrapperFormatString = "<span class=\"pagenum\">{0}</span>",
       NavigationPagerItemWrapperFormatString = "<li lass=\"prev\">{0}</li>",
       CssClass = "bootpag",
       SeparatorHtml = "&nbsp;",
       AutoHide = false,
       PageIndexOutOfRangeErrorMessage = "Page index out of range.",
       ShowFirstLast = false
   })
    </div>
            </div>
        </div>
    </div>
</div>
