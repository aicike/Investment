                            </div>
                        </div>
                        <div class="span6 ">
                            <div class="control-group">
                                <label class="control-label">
                                    详细地址</label>
                                <div class="controls">
                                    @Html.TextBoxFor(a => a.Address, new { @class = "m-wrap span12" })
                                    <span class="help-block">@Html.ValidationMessageFor(a => a.Address)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span4 ">
                            <div class="control-group">
                                <label class="control-label">
                                    企业性质</label>
