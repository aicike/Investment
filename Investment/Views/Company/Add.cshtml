                                    @Html.TextBoxFor(a => a.YingYeZhiZhao, new { @class = "m-wrap span12", placeholder = "注册号" })
                                    <span class="help-block">@Html.ValidationMessageFor(a => a.YingYeZhiZhao)</span>
                                </div>
                            </div>
                        </div>
                        <div class="span4 ">
                            <div class="control-group">
                                <div style="float:left">
                                    <img id="imgYingYeZhiZhao" style="width: 70px; height: 70px" />
                                </div>
                                <div style="float:left;margin-left:10px;">
                                    <input id="file_upload" name="file_upload" type="file" multiple="false" />
                                    <input id="hidYingYeZhiZhao" name="hidYingYeZhiZhao" type="hidden" />
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row-fluid">
                        <div class="span4 ">
                            <div class="control-group">
                                <label class="control-label">
                                    成立时间</label>
