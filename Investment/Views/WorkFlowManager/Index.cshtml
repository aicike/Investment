@{
    ViewBag.Title = "流程分类";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
}
@model List<Entity.WorkFlowManager>

<div class="row-fluid">
    <div class="span12" style="width: 100%">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>流程列表
                </div>
                <div class="tools">
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-bordered table-hover">
                    <tr>
                        <th>
                            流程名称
                        </th>
                        <th style="width: 20%">
                            操作
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                <a href="@Url.Action("SetNodeList", "WorkFlowManager", new { WorkFlowID = item.ID })">设置流程节点</a> 
                                
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
