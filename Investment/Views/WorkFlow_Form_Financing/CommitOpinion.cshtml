                <textarea class="span12 m-wrap txtCommitOpinion" rows="7"></textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" data-dismiss="modal" class="btn blue btnCommitOpinion" commit="@Url.Action("Disagree", "WorkFlowApproval")" status="approvalrecord3">
            确定</button>
        <button type="button" data-dismiss="modal" class="btn">
            关闭</button>
    </div>
</div>
