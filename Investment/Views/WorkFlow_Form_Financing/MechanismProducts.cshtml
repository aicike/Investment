@{
    ViewBag.Title = "MechanismProducts";
}
@model List<Entity.MechanismProducts> 
<div class="span12" style="margin-left: 0px">
    <table class="table table-bordered dataTable">
        <tr>
            <td colspan="6" class="td_title" style="font-weight: bold; text-align: left !important;">
                对接机构
            </td>
        </tr>
        <tr>
            <th>
                产品名称
            </th>
            <th>
                状态
            </th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @switch(item.State)
                    {
                        case 0:
                            @:待定中
                            break;
                        case 1:
                        @:进行中
                            break;
                        case 2:
                        @:结束
                            break;
                        case 3:
                        @:放款机构
                            break;
                    }
                </td>

            </tr>
        }
    </table>
</div>
